{
	"manifest_version": 2,
	"name": "Modern Kiosk",
	"description": "Kiosk-like facility extension for modern browsers",
	"version": "0.6",
	"permissions": ["menus", "tabs", "browserSettings"],
	"background": {
		"scripts": ["mk_bg.js"]
	},
	"icons": {
		"48": "icons/mk.svg"
	},
	"browser_action": {
		"default_icon": {
			"32": "icons/mk.svg"
		}
	}
}
